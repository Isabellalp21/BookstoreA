@using BookstoreA.Models
@model IEnumerable<Genre>


@{
    ViewData["Title"] = "Gêneros Literarios";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" style="text-decoration: none;">
        Adicionar novo Gênero Literário
    </a>
</p>

<table class="table table-hover">
    <tread>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th></th>
        </tr>

    </tread>
    <tbody>
        @foreach (Genre genre in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Genres"
                       asp-action="Details"
                       asp-route-id="@genre.Id">
                        @Html.DisplayFor(modelGenre => genre.Name)
                    </a>
                </td>
                <td>

                    <a type="button"
                       title="Detalhes"
                       class="btn btn-outline-info px-2 rounded mx-1"
                       asp-action="Details"
                       asp-route-id="@genre.Id">
                        <i class="bi bi-list-ul"></i>
                    </a>
                    <a type="button"
                       title="Editar"
                       class="btn btn-outline-warning px-2 rounded mx-1"
                       asp-action="Edit"
                       asp-route-id="@genre.Id">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a type="button"
                       title="Excluir"
                       class="btn btn-outline-danger px-2 rounded mx-1"
                       asp-action="Delete"
                       asp-route-id="@genre.Id">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>